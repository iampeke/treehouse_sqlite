<manifest xmlns:android="http://schemas.android.com/apk/res/android" android:versionCode="1" android:versionName="1.0" package="com.teamtreehouse.friendlyforecast">
    <uses-sdk android:minSdkVersion="14" android:targetSdkVersion="19"/>

    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION"/>
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"/>
    <uses-permission android:name="android.permission.INTERNET"/>

    <application android:allowBackup="true" android:icon="@drawable/ic_launcher" android:label="@string/app_name" android:theme="@style/AppTheme">
        <activity android:label="@string/app_name" android:name="com.teamtreehouse.friendlyforecast.ui.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:label="@string/title_activity_view_forecast" android:name="com.teamtreehouse.friendlyforecast.ui.ViewForecastActivity" android:parentActivityName="com.teamtreehouse.friendlyforecast.ui.MainActivity">
            <meta-data android:name="android.support.PARENT_ACTIVITY" android:value="MainActivity"/>
        </activity>
    </application>

</manifest>
